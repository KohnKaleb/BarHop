<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Friends"
    android:background="@color/backgroundColor">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="415dp"
        android:layout_height="722dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friendsListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/friends_header"
                style="@style/HeaderStyles"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="78dp" />

            <Button
                android:id="@+id/AddFriendsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Friends"
                android:onClick="switchToAddFriends"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>